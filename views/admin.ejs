<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="header">
    <h1>⚡ Admin Dashboard</h1>
  </div>

  <div class="container">
    <!-- Trainers Section -->
    <div class="section">
      <div class="section-header">
        <h2>Trainer Packages</h2>
        <button class="add-btn" onclick="showTrainerForm()">+ Add Trainer</button>
      </div>

      <% if (trainers && trainers.length > 0) { %>
        <% trainers.forEach(trainer => { %>
          <div class="item-card">
            <h3><%= trainer.trainer_name %></h3>
            <p><%= trainer.features %></p>
            <div class="card-actions">
              <button onclick="editTrainer('<%= trainer.id %>')">Edit</button>
              <button class="delete-btn" onclick="deleteTrainer('<%= trainer.id %>')">Delete</button>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="empty-state">
          <p>No trainers found. Add your first trainer to get started.</p>
        </div>
      <% } %>

      <form id="trainerForm" style="display:none;" action="/admin/add-trainer" method="POST">
        <input type="text" name="trainer_name" placeholder="Trainer Name" required>
        <textarea name="features" placeholder="Features (e.g., Personal training, Nutrition plans...)" required></textarea>
        <button type="submit" class="add-btn">Save Trainer</button>
      </form>
    </div>

    <!-- Events Section -->
    <div class="section">
      <div class="section-header">
        <h2>Events</h2>
        <button class="add-btn" onclick="showEventForm()">+ Add Event</button>
      </div>

      <% if (events && events.length > 0) { %>
        <% events.forEach(event => { %>
          <div class="item-card">
            <h3><%= event.title %></h3>
            <p><%= event.description %></p>
            
            <div class="event-meta">
              <p><strong>Category:</strong> <%= event.category %></p>
              <p><strong>Date:</strong> <%= event.date %></p>
              <p><strong>Time:</strong> <%= event.time %></p>
              <p><strong>Location:</strong> <%= event.location %></p>
              <p><strong>Price:</strong> ₹<%= event.price %></p>
              <p><strong>Participants:</strong> <%= event.participants %></p>
            </div>

            <div class="card-actions">
              <button class="view-btn" onclick="viewParticipants('<%= event.title %>','<%= userId %>')">View Participants</button>
              <button onclick="editEvent('<%= event.id %>' , '<%= userId %>')">Edit</button>
              <button class="delete-btn" onclick="deleteEvent('<%= event.id %>','<%= userId %>')">Delete</button>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="empty-state">
          <p>No events found. Create your first event to get started.</p>
        </div>
      <% } %>

      <form id="eventForm" style="display:none;" action="/admin/add-event/<%= userId %>" method="POST">
        <input type="text" name="title" placeholder="Event Title" required>
        <input type="text" name="category" placeholder="Category (e.g., Fitness, Yoga, Sports)" required>
        <input type="date" name="date" required>
        <input type="time" name="time" required>
        <input type="text" name="location" placeholder="Location" required>
        <input type="text" name="price" placeholder="Price (₹)" required>
        <textarea name="description" placeholder="Event Description"></textarea>
        <button type="submit" class="add-btn">Save Event</button>
      </form>
    </div>
  </div>

  <script>
    function showTrainerForm() {
      const form = document.getElementById("trainerForm");
      form.style.display = form.style.display === "none" ? "block" : "none";
    }

    function showEventForm() {
      const form = document.getElementById("eventForm");
      form.style.display = form.style.display === "none" ? "block" : "none";
    }

    function deleteEvent(event_id, id) {
      if (confirm("Are you sure you want to delete this event?")) {
        fetch(`/admin/delete-event/${event_id}/${id}`, { method: "DELETE" })
          .then(() => location.reload());
      }
    }

    function editEvent(event_id, id) {
      window.location.href = `/admin/edit-event/${event_id}/${id}`;
    }

    function viewParticipants(event_title, id) {
      window.location.href = `/${id}/admindashboard/${event_title}/viewparticipants`;
    }
  </script>
</body>
</html>