<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainer Registration - AJ Fitness Hub</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            color: #fff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 550px;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-section h1 {
            color: #ffd700;
            font-size: 32px;
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .logo-section p {
            color: #bbb;
            font-size: 14px;
        }

        .card {
            background: #1e1e1e;
            padding: 40px;
            border-radius: 8px;
            border: 1px solid #333;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #ffd700;
            font-size: 24px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 10px;
            padding-bottom: 15px;
            border-bottom: 2px solid #ffd700;
        }

        .selection-info {
            background: #252525;
            padding: 18px;
            border-radius: 4px;
            border-left: 3px solid #ffd700;
            margin-bottom: 30px;
        }

        .selection-info h3 {
            color: #ffd700;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .selection-info p {
            color: #bbb;
            font-size: 14px;
            margin: 5px 0;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .selection-info strong {
            color: #fff;
        }

        .badge {
            background: #ffd700;
            color: #000;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        label {
            font-size: 14px;
            color: #ffd700;
            font-weight: 500;
        }

        input {
            padding: 12px 15px;
            border-radius: 4px;
            border: 1px solid #3a3a3a;
            background: #252525;
            color: #fff;
            font-size: 14px;
            outline: none;
            transition: all 0.2s ease;
        }

        input:focus {
            border-color: #ffd700;
            box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.1);
        }

        input::placeholder {
            color: #666;
        }

        .required {
            color: #ff6b6b;
            margin-left: 4px;
        }

        button {
            background-color: #ffd700;
            color: #000;
            border: none;
            padding: 14px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            font-size: 15px;
            transition: all 0.2s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 10px;
        }

        button:hover {
            background-color: #ffed4e;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(255, 215, 0, 0.3);
        }

        button:active {
            transform: translateY(0);
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #3a3a3a;
        }

        .back-link a {
            color: #ffd700;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .back-link a:hover {
            color: #ffed4e;
            text-decoration: underline;
        }

        .help-text {
            color: #888;
            font-size: 12px;
            margin-top: 4px;
        }

        @media (max-width: 768px) {
            .card {
                padding: 30px 20px;
            }

            .logo-section h1 {
                font-size: 26px;
            }

            h2 {
                font-size: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo-section">
            <h1>‚ö° AJ FITNESS HUB</h1>
            <p>Transform Your Body, Transform Your Life</p>
        </div>

        <div class="card">
            <h2>Trainer Package Registration</h2>

            <div class="selection-info">
                <h3>Your Selection</h3>
                <p>
                    <span>üë§ Trainer:</span>
                    <strong><%= trainer %></strong>
                </p>
                <p>
                    <span>üì¶ Package:</span>
                    <strong><%= selectedPackage %></strong>
                    <span class="badge">Selected</span>
                </p>
            </div>

            <form id="regForm" class="register-form" action="/<%= id %>/registerdata/<%= trainer %>/<%= selectedPackage  %>" method="post">
                <div class="form-group">
                    <label for="name">Full Name<span class="required">*</span></label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        placeholder="Enter your full name" 
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="email">Email Address<span class="required">*</span></label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="you@example.com" 
                        required
                    >
                    <span class="help-text">We'll send your training schedule to this email</span>
                </div>

                <div class="form-group">
                    <label for="contact">Contact Number<span class="required">*</span></label>
                    <input 
                        type="tel" 
                        id="contact" 
                        name="contact" 
                        pattern="[7-9]{1}[0-9]{9}" 
                        placeholder="Enter 10-digit mobile number" 
                        required
                    >
                    <span class="help-text">Your trainer will contact you on this number</span>
                </div>

                <button type="submit">Complete Registration</button>

                <div class="back-link">
                    <a href="javascript:history.back()">‚Üê Back to Packages</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById("regForm");

        form.addEventListener("submit", function(e) {
            let name = document.getElementById("name").value.trim();
            let email = document.getElementById("email").value.trim();
            let contact = document.getElementById("contact").value.trim();

            let emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            let contactPattern = /^[7-9]\d{9}$/;

            if (name === "") {
                e.preventDefault();
                alert("Please enter your name.");
                return;
            }
            if (!emailPattern.test(email)) {
                e.preventDefault();
                alert("Please enter a valid email address.");
                return;
            }
            if (!contactPattern.test(contact)) {
                e.preventDefault();
                alert("Please enter a valid 10-digit contact number starting with 7, 8, or 9.");
                return;
            }

            // If all validation passes, form will submit normally
        });
    </script>
</body>
</html>